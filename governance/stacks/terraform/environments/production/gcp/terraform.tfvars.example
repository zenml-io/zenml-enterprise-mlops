# Production Stack Configuration
# Copy to terraform.tfvars and fill in values
#
# Usage:
#   cp terraform.tfvars.example terraform.tfvars
#   source scripts/use-workspace.sh production  # Sets ZenML credentials
#   terraform init && terraform apply
#
# PRODUCTION CHECKLIST:
#   [ ] Configure remote state backend (uncomment in main.tf)
#   [ ] Review IAM permissions
#   [ ] Enable required GCP APIs
#   [ ] Document in change management system

# =============================================================================
# Required: GCP Project
# =============================================================================

project_id = "zenml-core"

# =============================================================================
# Stack Configuration (defaults shown, override as needed)
# =============================================================================

# region     = "us-central1"
# stack_name = "gcp-stack"

# =============================================================================
# Cost Tracking
# =============================================================================

# team_name   = "platform-team"
# cost_center = "ml-platform"

# Additional GCP resource labels
labels = {
  owner   = "platform-team"
  purpose = "ml-production"
}

# =============================================================================
# ZenML Connection
# =============================================================================
# Set via environment variables (recommended):
#   source scripts/use-workspace.sh production
#
# This sets TF_VAR_zenml_server_url and TF_VAR_zenml_api_key automatically.
# Do NOT put credentials in this file.
