# Staging Stack Configuration
# Copy to terraform.tfvars and fill in values
#
# Usage:
#   cp terraform.tfvars.example terraform.tfvars
#   source scripts/use-workspace.sh dev-staging  # Sets ZenML credentials
#   terraform init && terraform apply

# =============================================================================
# Required: GCP Project
# =============================================================================

project_id = "zenml-core"

# =============================================================================
# Stack Configuration (defaults shown, override as needed)
# =============================================================================

# region     = "us-central1"
# stack_name = "staging-stack"

# =============================================================================
# Cost Tracking
# =============================================================================

# team_name   = "data-science"
# cost_center = "ml-platform"

# Additional GCP resource labels
labels = {
  owner   = "platform-team"
  purpose = "ml-staging"
}

# =============================================================================
# ZenML Connection
# =============================================================================
# Set via environment variables (recommended):
#   source scripts/use-workspace.sh dev-staging
#
# This sets TF_VAR_zenml_server_url and TF_VAR_zenml_api_key automatically.
# Do NOT put credentials in this file.
